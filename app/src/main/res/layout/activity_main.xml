<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/backhead"
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:layout_gravity="center"
        android:src="@drawable/backheader"
        android:scaleType="centerCrop"
        tools:ignore="RedundantDescriptionCheck,RtlHardcoded"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_gravity="left"
        android:contentDescription="@string/button_previous_card"
        android:src="@drawable/avantajpam"
        tools:ignore="RedundantDescriptionCheck,RtlHardcoded"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="307dp"
        />

    <TextView
        android:id="@+id/title_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginStart="27dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="26dp"
        android:text="@string/yourPhoneNumber"
        android:textSize="13sp" />
    <LinearLayout
        android:id="@+id/groupPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text1"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="6dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp">

        <Spinner
            android:id="@+id/country_code_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="18dp"/>

        <EditText
            android:id="@+id/phone_number_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/digicelOrNatcom"
            android:inputType="phone"
            tools:ignore="Autofill"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="18dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/BtnConnection"
        android:layout_below="@id/groupPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="175dp"
        android:text="@string/connection"
        android:textColor="@color/white"
        tools:ignore="VisualLintButtonSize"
        />

</RelativeLayout>