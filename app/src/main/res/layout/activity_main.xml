<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/backhead"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/backheader"
        android:scaleType="centerCrop"
        tools:ignore="RedundantDescriptionCheck,RtlHardcoded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/avantajpam"
        android:background="@android:color/transparent"
        tools:ignore="RedundantDescriptionCheck,RtlHardcoded"
        app:layout_constraintBottom_toTopOf="@id/backhead"
        app:layout_constraintTop_toBottomOf="@id/backhead"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="300dp" />

    <TextView
        android:id="@+id/title_text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/yourPhoneNumber"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="27dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="26dp" />

    <LinearLayout
        android:id="@+id/groupPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/title_text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="6dp"
        >

        <Spinner
            android:id="@+id/country_code_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="13dp"
            android:layout_weight="1"
            android:minWidth="48dp"
            android:minHeight="48dp"
        />

        <EditText
            android:id="@+id/phone_number_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/digicelOrNatcom"
            android:inputType="phone"
            tools:ignore="Autofill"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="18dp"
            android:minWidth="48dp"

            android:minHeight="48dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/BtnConnection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="27dp"
        android:text="@string/connection"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupPhone"
        tools:ignore="VisualLintButtonSize"
        android:minHeight="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>